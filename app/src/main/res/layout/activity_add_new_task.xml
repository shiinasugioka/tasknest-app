<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNewTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButtonExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="36dp"
            android:background="@null"
            android:contentDescription="Exit button"
            android:minHeight="48dp"
            app:srcCompat="@drawable/exit_btn" />

        <TextView
            android:id="@+id/textViewTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="164dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins"
            android:minHeight="48dp"
            android:paddingTop="5dp"
            android:text="Add New Task"
            android:textColor="@color/primary_text"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="29dp"
            android:layout_height="36dp"
            android:layout_marginStart="52dp"
            app:srcCompat="@drawable/color_palette_1" />

        <EditText
            android:id="@+id/editTaskTitle"
            android:layout_width="224dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/poppins"
            android:hint="Task Title"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingBottom="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/calendar__2__1" />


        <EditText
            android:id="@+id/editTaskStartDate"
            android:layout_width="224dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:hint="Enter date"
            android:minHeight="48dp"
            android:paddingBottom="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="28dp"
            android:layout_height="31dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/clock_1" />

        <CheckBox
            android:id="@+id/allDayCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:paddingTop="5dp"
            android:paddingBottom="0dp"
            android:text="All Day"
            android:textColor="@color/primary_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTaskStartTime"
            android:layout_width="224dp"
            android:layout_height="41dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:hint="Enter time"
            android:minHeight="48dp"
            android:paddingBottom="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/repeat_button_1" />

        <CheckBox
            android:id="@+id/checkboxRepeating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:paddingTop="5dp"
            android:paddingBottom="0dp"
            android:text="Repeating Event"
            android:textColor="@color/primary_text"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/repeatingEventOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Repeat Every" />

            <EditText
                android:id="@+id/timeInterval"
                android:layout_width="52dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:hint="##"
                android:paddingStart="11dp"
                android:inputType="number"
                android:minHeight="48dp" />

            <Spinner
                android:id="@+id/intervalSpinner"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                android:paddingBottom="0dp"
                android:text="at" />

            <EditText
                android:id="@+id/reminderTime"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                android:hint="HH:MM"
                android:paddingBottom="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                android:paddingBottom="0dp"
                android:text="Starts on" />

            <EditText
                android:id="@+id/repeatingStartDate"
                android:layout_width="164dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                android:hint="MM/DD/YYYY"
                android:inputType="textNoSuggestions"
                android:minHeight="48dp"
                android:paddingBottom="0dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:text="Ends on" />

            <EditText
                android:id="@+id/repeatingEndDate"
                android:layout_width="164dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:hint="MM/DD/YYYY"
                android:minHeight="48dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/createNewTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:paddingBottom="0dp"
            android:text="Create New Task" />
    </LinearLayout>

</LinearLayout>