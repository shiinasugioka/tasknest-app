<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="logo">
        <item name="android:layout_width">193dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">42dp</item>
    </style>

    <style name="horizontal_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">611dp</item>
        <item name="android:background">#cbced7</item>
    </style>

    <style name="navbar_items">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="view_nest_button_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="view_nest_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="underline_bar_view_nest">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@drawable/underline_rectangle</item>
    </style>

    <style name="view_day_button_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="view_day_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#2D3142</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="underline_bar_view_day">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@drawable/underline_rectangle</item>
    </style>

    <style name="new_nest_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/rectangular_button</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#2D3142</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="footer_items">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginTop">522dp</item>
        <item name="android:background">@color/main_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="sort_button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginEnd">290dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="settings_button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="new_task_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">29dp</item>
        <item name="android:layout_marginTop">493dp</item>
        <item name="android:layout_marginEnd">29dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="nest_drop_down">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">210dp</item>
        <item name="android:layout_marginBottom">470dp</item>
    </style>
</resources>